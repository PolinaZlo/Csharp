<Window x:Class="laba_2B.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Карты - лаба_2B" Height="350" Width="396.192">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="404*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ToolBar Height="30" VerticalAlignment="Top" Grid.RowSpan="2">
            <Button x:Name="Cards" Content="Колода" Click="Cards_Click"/>
            <Button x:Name="Shuffle" Content="Тасовать" Click="Shuffle_Click" />
        </ToolBar>
        <ScrollViewer Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" Name="stackPanel" Grid.Row="1"/>
        </ScrollViewer>
    </Grid>
</Window>
